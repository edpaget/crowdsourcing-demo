html
  background: black
  color: white
  font: 14px "Helvetica Neue", sans-serif
  text-align: center

.stack
  > *
    display: none

    &.active
      display: block

button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  padding: 0

a
  color: inherit

nav
  font-size: 20px
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: 30px
  z-index: 1
  background-color: #000
  text-align: center

  a, select, button
    margin: 0 20px

  a
    text-decoration: none

    &.results
      font-size: normal

.classify,
.results
  text-align: center

  .action
    bottom: 30px
    position: absolute
    left: 0
    font-size: 20px
    width: 100%

    button
      display: block
      margin: 20px 0
      width: 100%

      &[name="next"]
        font-size: 24px

#tracer {
  position: relative;
}

#playercanvas, #tracercanvas {
  width: 840px;
  height: 560px;
  background: #111;
  cursor: crosshair;
  -webkit-tap-highlight-color: transparent;
}
